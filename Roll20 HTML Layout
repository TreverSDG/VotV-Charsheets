    <script type="text/worker">
    const buttonlist = ["character","expertise","traits","inventory","abilities","spells","adversary",];
    buttonlist.forEach(button => {
        on(`clicked:${button}`, function() {
            setAttrs({
                sheetTab: button
            });
        });
    });
    </script>
